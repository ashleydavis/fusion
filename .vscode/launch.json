{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/cli.ts",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "args": [
                // Your args here.
            ],
            "skipFiles": [
                "node_modules/**/*.js"
            ],
            "outFiles": [
                "${workspaceRoot}/build/**/*.js"
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "internalConsole",
            "trace": "all"
        },
        {
            "name": "Test All",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "args": [
                "--config",
                "jest.config.js",
                "--runInBand"
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "disableOptimisticBPs": true
       },
       {
            "name": "Test Current",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
            },
            "args": [
                "${relativeFile}",
                "--config",
                "jest.config.js",
                "--runInBand"
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "disableOptimisticBPs": true
       }
    ]
}